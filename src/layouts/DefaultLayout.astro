---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import site from "@/site.json";

const { title, description, showHeader = true, showFooter = true } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title || site.name} description={description || site.description} />
  </head>

  <body>
    {showHeader && <Header />}
    <slot />
    {showFooter && <Footer />}
  </body>
</html>
